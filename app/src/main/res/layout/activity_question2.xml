<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@drawable/quest"
    tools:context=".questions.Question2Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textStyle="italic"
        android:text="Who had won an individual Gold medal in the Womenâ€™s individual event of Artistic gymnastics in the 2016 Rio Olympics?"
        android:textColor="#FFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answ1"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/boottom2"
        android:text="Madison Kocian"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#00A600"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/answ3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answ2"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/boottom2"
        android:text="Aliya Mustafina"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#00A600"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/answ4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answ3"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/boottom3"
        android:text="Mao Yi"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#00A600"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/answ1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answ4"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/boottom3"
        android:text="Simone Biles"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#00A600"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/answ2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/live1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@drawable/bol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/live2"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/live2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@drawable/bol"
        app:layout_goneMarginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/live3"
        app:layout_constraintStart_toEndOf="@id/live1" />

    <ImageView
        android:id="@+id/live3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@drawable/bol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/live2" />

</androidx.constraintlayout.widget.ConstraintLayout>